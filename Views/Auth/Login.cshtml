@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-4">Login</h2>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="email" class="form-label">Email</label>
                            <input name="Email" asp-for="email" class="form-control" placeholder="Enter your email">
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="password" class="form-label">Password</label>
                            <input name="Password" asp-for="password" class="form-control" placeholder="Enter your password">
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <div class="text-center mt-3">
                            <p>Don't have an account? <a asp-action="Register">Register here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
